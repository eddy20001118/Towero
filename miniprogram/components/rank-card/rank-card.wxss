@import "/app.wxss";

.rank-play-off-container {
    padding-top: 15px;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.team-info-container {
    margin-left: 15px;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.rank-number {
    font-size: 15pt;
    font-weight: bold;
}

.play-off {
    font-size: 10pt;
    color: #9e9e9e;
}

.team-name {
    font-size: 12pt;
}

.rank-score {
    color: #9e9e9e;
    font-size: 10pt;
    line-height: 15pt;
}
